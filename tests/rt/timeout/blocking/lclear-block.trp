(* this program blocks in the receive, because receive without explicit bounds 
   uses [pc,pc] as its low/high bounds *)

let val main = self ()
    val _ = spawn (fn () => 
                     if (1 raisedTo {alice}) then send (main, 42) 
                     else ())    
    val _ = receive [ hn x => print x ] 
in ()
end
 